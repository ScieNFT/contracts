{
  "singleQuote": true,
  "printWidth": 100,
  "proseWrap": "always",
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "semi": true,
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-solidity"],
  "pluginSearchDirs": ["."],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    }
  ]
}
